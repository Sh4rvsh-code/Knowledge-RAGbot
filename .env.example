# Application Settings
APP_NAME="RAG Document Q&A System"
APP_VERSION="1.0.0"
DEBUG=False
LOG_LEVEL="INFO"

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=False

# LLM Provider (local or remote)
LLM_PROVIDER="remote"  # Options: "local", "remote"

# OpenAI Configuration (if using remote LLM)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Anthropic Configuration (alternative remote LLM)
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Local LLM Configuration (if using local LLM)
LOCAL_MODEL_NAME="facebook/opt-1.3b"
LOCAL_MODEL_MAX_LENGTH=512

# Embedding Model
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_BATCH_SIZE=32

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# File Storage
UPLOAD_DIR="data/uploads"
MAX_UPLOAD_SIZE_MB=50

# FAISS Index
FAISS_INDEX_DIR="data/faiss_index"
FAISS_INDEX_TYPE="IndexFlatIP"  # IndexFlatIP for cosine similarity, IndexFlatL2 for L2

# Database
DATABASE_URL="sqlite:///data/database.db"

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
